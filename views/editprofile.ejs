<div class='row text-center'>
  <div class='col-12'>
    <h2>Profile Page</h2>
  </div>
</div>
<div class='row'>
  <div class='col my-2 text-center'>
    <form id="zipcodeform" action="/profile">
      <h3><%= user.name %></h3>
      <ul>
        <li style="list-style:none">Zip Code: <input class='text-center' style='width:100px;' name='zipcode' type="text" value="<%=user.zipcode%>" placeholder="Enter Zip Code"></li>
      </ul>
      <button type='submit' class='btn'>Save</button>
    </form>
  </div>
</div>



<script>
  $('#zipcodeform').on('submit', function(e) {
    e.preventDefault();
    var zipcodeForm = $(this)
    var putUrl = zipcodeForm.attr('action');
    var formData = zipcodeForm.serialize();
    console.log('DADADADADADDA');
    console.log(formData);
    $.ajax({
      type:'put',
      url: putUrl,
      data: formData
    }).done(function() {
      window.location = '/profile';
    });
  });
</script>
